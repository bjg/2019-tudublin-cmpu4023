type Category{
  id:ID! @unique
  categoryname: String!
}

type Product {
  id:ID! @unique
  category: Category!
  title: String!
  actor: String
  price: Float!
  special: Boolean
}

type Inventory {
  id:ID! @unique
  product: Product!
  quan_in_stock: Int!
  sales: Int!
}

type Orderline {
  id:ID! @unique
  product: Product!
  quantity: Int!
}

type Order {
  id:ID! @unique
  quantity: Int
  net_amount: Float
  tax: Float
  total_amount:Float
  orderdate: String
  orderlines: [Orderline!]!
}

