type User {
  id: ID! @unique
  email: String @unique
  name: String!
  posts: [Post!]!
}

type Post {
  id: ID! @unique
  title: String!
  published: Boolean! @default(value: "false")
  author: User
}

type Category {
  category: ID! @unique
  categoryname: String!
  products: [Product!]!
}

type Product {
	prod_id: ID! @unique
	category: Category
	reorders: [Reorder!]!
	inventories: [Inventory!]!
	orderlines: [Orderline!]!
	title: String!
	actory: String!
	price: Float!
	special: Int!
	common_prod_id: Int!
}

type Reorder {
	product: Product
	date_low: DateTime!
	quan_low: Int!
	date_reordered: DateTime!
	quan_reordered: Int!
	date_expected: DateTime!
}

type Inventory {
	product: Product
	quan_in_stock: Int!
	sales: Int!
}

type Orderline {
	orderline_id: ID! @unique
	product: Product
	quantity: Int!
	orderdate: DateTime!
}