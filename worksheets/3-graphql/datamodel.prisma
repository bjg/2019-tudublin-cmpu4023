type User {
  id: ID! @unique
  email: String @unique
  name: String!
  posts: [Post!]!
}

type Post {
  id: ID! @unique
  title: String!
  published: Boolean! @default(value: "false")
  author: User
}

input OrderInput {
  netamount: Float!
  tax: Float!
  totalamount: Float!
  customerid: ID!
}

type Order {
  id: ID! @unique
  orderdate: String
  netamount: Float!
  tax: Float!
  totalamount: Float!
  customer: Customer!
  orderLines: [OrderLine!]!
}

type Customer {
  id: ID! @unique
  firstname: String!
  lastname: String!
  address1: String!
  address2: String
  city: String!
  state: String
  zip: Int!
  country: String!
  region: String
  email: String!
  creditcardtype: Int!
  creditcard: String!
  creditcardexpiration: String!
  username: String!
  password: String!
  age: Int
  income: Int
  gender: Boolean
  orders: [Order!]!
}

type Category {
  id: ID! @unique
  categoryname: String!
  products: [Product!]!
}

type Product {
  id: ID! @unique
  title: String!
  actor: String
  price: Float!
  special: Int
  category: Category
  productorderlines: [OrderLine!]!
}

type OrderLine {
  id: ID! @unique
  quantity: Int!
  orderdate: String
  product: Product!
  order: Order!
}