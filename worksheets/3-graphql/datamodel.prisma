type Reorder{
  id: ID! @unique
  date_low: String!
  quan_low: Int!
  date_reordered: String!
  quan_reordered: Int!
  date_expected: String!
  product: Product
}

type Inventory{
  id: ID! @unique
  product: Product
  quan_in_stock: Int!
  sales: Int!
}

type Orderline{
  id: ID! @unique
  order: Order
  products: [Product!]!
  quantity: Int!
  order_date: String!
}

type CustomerHistory{
  id: ID! @unique
  customer: Customer
  order: Order
  product:Product
}

type Order{
  id: ID! @unique
  order_date: String!
  customer: Customer
  net_amount: Float!
  tax: Float!
  total_amount: Float!
}

type Customer{  
  id: ID! @unique
  firstname: String!
  lastname: String!
  address: String!
  city: String!
  zip: Int!
  country: String!
  region: Int!
  email: String!
}


type Product{
  id: ID! @unique
  category: Int!
  title: String!
  actor: String!
  price: Float!
  special: Int!
  common_prod_id: Int!
}

type Catergory{
  id: ID! @unique
  category_name: String!
}
